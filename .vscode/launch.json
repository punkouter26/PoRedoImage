{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch PoRedoImage",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "kill-dotnet-and-build",
            "program": "${workspaceFolder}/src/PoImageGc.Web/bin/Debug/net10.0/PoImageGc.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/PoImageGc.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+https?://\\S+",
                "uriFormat": "http://localhost:5000"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Run Unit Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/PoImageGc.Tests.Unit/PoImageGc.Tests.Unit.csproj",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Integration Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/PoImageGc.Tests.Integration/PoImageGc.Tests.Integration.csproj",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to .NET Core",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": []
}

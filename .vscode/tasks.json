{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/PoRedoImage.slnx",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/PoRedoImage.slnx"
            ],
            "problemMatcher": "$msCompile",
            "group": "test"
        },
        {
            "label": "kill-dotnet",
            "type": "shell",
            "command": "taskkill /F /IM dotnet.exe /T 2>$null; exit 0",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "kill-dotnet-and-build",
            "dependsOrder": "sequence",
            "dependsOn": ["kill-dotnet", "build"]
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/PoImageGc.Web"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/PoRedoImage.slnx"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/PoRedoImage.slnx"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "start-playwright-mcp",
            "type": "shell",
            "command": "npx",
            "args": [
                "@playwright/mcp",
                "--config",
                "./playwright-mcp.config.json"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "start-playwright-mcp-headless",
            "type": "shell",
            "command": "npx",
            "args": [
                "@playwright/mcp",
                "--config",
                "./playwright-mcp.config.json",
                "--headless"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "test-playwright-mcp",
            "type": "shell",
            "command": "node",
            "args": [
                "test-playwright-mcp.js"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "test-coverage",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/PoRedoImage.slnx",
                "--collect:\"XPlat Code Coverage\"",
                "--results-directory",
                "${workspaceFolder}/TestResults"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-e2e",
            "type": "shell",
            "command": "npx",
            "args": [
                "playwright",
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests/PoImageGc.Tests.E2E"
            },
            "group": "test",
            "problemMatcher": []
        }
    ]
}
